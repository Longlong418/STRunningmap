  overflow: hidden;
}

.progress-bar-inner {
  width: 100%;
  height: 100%;
  background-color: #00aeff;
  position: absolute;
  top: 0;
  left: 0;
  transform-origin: center center;
  transition: transform 0.3s ease-in-out;
}


